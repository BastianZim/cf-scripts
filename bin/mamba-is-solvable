#!/usr/bin/env python3 -u

if __name__ == "__main__":
    import sys
    import rapidjson as json
    from conda_forge_tick.mamba_solver import MambaSolver

    data = json.loads(sys.argv[1])
    solver = MambaSolver(data["channels"], data["platform"])
    success = solver.solve(data["specs"], precheck=False)
    if success:
        sys.exit(0)
    else:
        sys.exit(1)
